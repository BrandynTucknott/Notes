% Theorem / proof environments
\RequirePackage{thmtools}
\RequirePackage{cleveref}

% Number theorems within sections and provide common theorem-like environments
\declaretheoremstyle[
	spaceabove=6pt, spacebelow=6pt,
	headfont=\normalfont\bfseries,
	notefont=\normalfont\bfseries, notebraces={(}{)},
	bodyfont=\normalfont\itshape,
	postheadspace=1em,
	qed=\qedsymbol
]{myplain}

\declaretheorem[style=myplain,numberwithin=section]{theorem}
\declaretheorem[style=myplain,sibling=theorem]{lemma}
\declaretheorem[style=myplain,sibling=theorem]{proposition}
\declaretheorem[style=myplain,sibling=theorem]{corollary}

\declaretheoremstyle[
	spaceabove=6pt, spacebelow=6pt,
	headfont=\normalfont\bfseries,
	bodyfont=\normalfont,
	postheadspace=1em
]{mydef}

\declaretheorem[style=mydef,sibling=theorem]{definition}
\declaretheorem[style=mydef,sibling=theorem]{example}

\declaretheoremstyle[
	headfont=\normalfont\itshape,
	bodyfont=\normalfont\itshape,
	postheadspace=1em
]{myremark}

\declaretheorem[style=myremark,sibling=theorem]{remark}
\declaretheorem[style=myremark,numbered=no]{notation}

% Unnumbered environments
\newtheorem*{claim}{Claim}

% Improve cross-references via cleveref
\crefname{theorem}{theorem}{theorems}
\Crefname{theorem}{Theorem}{Theorems}
\crefname{lemma}{lemma}{lemmas}
\Crefname{lemma}{Lemma}{Lemmas}
\crefname{corollary}{corollary}{corollaries}
\Crefname{corollary}{Corollary}{Corollaries}
\crefname{definition}{definition}{definitions}
\Crefname{definition}{Definition}{Definitions}
\crefname{remark}{remark}{remarks}
\Crefname{remark}{Remark}{Remarks}
